<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProjectsActivity"
    android:background="@drawable/backgroundimage">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userList"
        android:layout_width="365dp"
        android:layout_height="588dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_projects"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/textView_projects"
        app:layout_constraintTop_toBottomOf="@+id/textView_projects"
        tools:listitem="@layout/projects_item" />

    <TextView
        android:id="@+id/textView_projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Projects"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_BackToProj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/userList"
        app:layout_constraintStart_toStartOf="@+id/userList"
        app:layout_constraintTop_toBottomOf="@+id/userList" />

</androidx.constraintlayout.widget.ConstraintLayout>