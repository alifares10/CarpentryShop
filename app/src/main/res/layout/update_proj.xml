<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage">

    <EditText
        android:id="@+id/editTextUpdateProjName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="637dp"
        android:ems="10"
        android:hint="Customer Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <EditText
        android:id="@+id/editTextUpdateProjPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Customer Phone"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextUpdateProjName"
        app:layout_constraintStart_toStartOf="@+id/editTextUpdateProjName"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateProjName" />

    <EditText
        android:id="@+id/editTextUpdateProjLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Project Location"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextUpdateProjPhone"
        app:layout_constraintStart_toStartOf="@+id/editTextUpdateProjPhone"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateProjPhone" />

    <EditText
        android:id="@+id/editTextUpdateProjDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Project Date"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextUpdateProjLoc"
        app:layout_constraintStart_toStartOf="@+id/editTextUpdateProjLoc"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateProjLoc" />

    <EditText
        android:id="@+id/editTextUpdateProjDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Project Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextUpdateProjDate"
        app:layout_constraintStart_toStartOf="@+id/editTextUpdateProjDate"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateProjDate" />

    <Button
        android:id="@+id/buttonUpdateOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="@+id/editTextUpdateProjDesc"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/editTextUpdateProjDesc"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateProjDesc" />

    <Button
        android:id="@+id/buttonCancelUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/buttonUpdateOk"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonUpdateOk"
        app:layout_constraintTop_toBottomOf="@+id/buttonUpdateOk" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="174dp"
        android:text="Enter The Field You Want To Update "
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>